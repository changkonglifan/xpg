<% include ../public/mini_nav.ejs %>
<link rel="stylesheet" href="css/user.css">
<% include ../public/header_top.ejs %>

<div class="reg_main">
	<!-- 面包屑 -->
	<div class="bread">
		<div class="b_nav">
			您现在的位置:
			<a href="./">小苹果零食坊</a>><span>会员注册</span>
		</div>
	</div>
	<div class="pron">
		<form action="./register" method="post">	
			<div class="form_item clearFix">
				<span class="label">
					<b class="ftx04">*</b>
					用户名:
				</span>
				<div class="l item_info">
					<input id="userName" name="userName" tabindex="1" autocomplete="off" type="text" class="txt">
					<i class="i_user"></i>
				</div>
				<span class="error"></span>
			</div>
			<div class="form_item clearFix">
				<span class="label">
					<b class="ftx04">*</b>
					请输入密码:
				</span>
				<div class="l item_info">
					<input id="psw" name="psw" tabindex="2" autocomplete="off" type="password" class="txt">
					<i class="i_psw"></i>
				</div>
				<span class="error"></span>
			</div>
			<div class="form_item clearFix">
				<span class="label">
					<b class="ftx04">*</b>
					请再次输入密码:
				</span>
				<div class="l item_info">
					<input id="confirmPsw" name="confirmPsw" tabindex="3" autocomplete="off" type="password" class="txt">
					<i class="i_psw"></i>
				</div>
				<span class="error"></span>
			</div>
			<div class="form_item clearFix">
				<span class="label">
					<b class="ftx04">*</b>
					电子邮件:
				</span>
				<div class="l item_info">
					<input id="email" name="email" tabindex="4" autocomplete="off" type="text" class="txt">
					<i class="i_email"></i>
				</div>
				<span class="error"></span>
			</div>
			<div class="form_item clearFix">
				<span class="label">
					<b class="ftx04">*</b>
					验证码:
				</span>
				<div class="l item_info ">
					<input id="autocode" name="autocode" tabindex="5" autocomplete="off" type="text" class="txt">
					<i class="i_autoCode"></i>
				</div>
				<span class="error"></span>
			</div>
			<!-- 注册协议 -->
			<div class="l zcxy clearFix">
				<input type="checkbox" name="zxxy" tabindex="6">我已阅读并同意<a href="#">《注册协议》</a>
				<div class="cl"></div>
			</div>
			<div class="l commit">
				<input id="reg_submit" class="btn" name="submit" value="立即注册" type="submit" tabindex="7">
			</div>
			<div class="cl"></div>
		</form>
	</div>
</div>



<script type="text/javascript" src="js/user.js"></script>
